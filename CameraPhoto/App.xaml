<Application x:Class="CameraPhoto.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CameraPhoto"
             StartupUri="PayStatus.xaml">
    <Application.Resources>
        <!--开始按钮-->
        <ControlTemplate x:Key="StartBtn" TargetType="{x:Type Button}">
            <Grid>
                <Rectangle HorizontalAlignment="Center" Width="180" Height="60">
                    <Rectangle.Fill>
                        <ImageBrush   ImageSource="/CameraPhoto;component/Resources/Start.png" ></ImageBrush>
                    </Rectangle.Fill>
                </Rectangle>

            </Grid>
        </ControlTemplate>

    </Application.Resources>
</Application>
